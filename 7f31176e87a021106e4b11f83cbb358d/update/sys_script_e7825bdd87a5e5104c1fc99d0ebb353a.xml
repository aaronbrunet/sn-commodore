        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var constants = new x_snc_commodore_0.CCUtils().getConstants();
	var targetGroup = '';
	if(current.role=='founder'){
		targetGroup = constants.FOUNDER_GROUP;
	}
	if(current.role=='member'){
		targetGroup = constants.MEMBER_GROUP;
	}
	var group = new GlideRecord('sys_user_grmember');
		group.addQuery('group', targetGroup);
		group.addQuery('user', current.user.sys_id);
		group.query();
		
		if(!group.next()) {
			group.initialize();
			group.group = targetGroup;
			group.user = current.user.sys_id;
			group.insert();
		}

})(current, previous);]]></script>
